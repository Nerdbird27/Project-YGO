-- Deep Sea Dragon / Synchro / WATER / Aqua / Sea Serpent / Effect
local s,id=GetID()
function s.initial_effect(c)
    -- Always treated as Aqua & Sea Serpent
    local e0=Effect.CreateEffect(c)
    e0:SetType(EFFECT_TYPE_SINGLE)
    e0:SetCode(EFFECT_ADD_RACE)
    e0:SetValue(RACE_AQUA+RACE_SEASERPENT)
    c:RegisterEffect(e0)

    -- Synchro Summon procedure: 1 Tuner + 1+ Non-Tuner WATER
    Synchro.AddProcedure(c, nil, 1, 1, Synchro.NonTuner(aux.FilterBoolFunction(Card.IsRace,RACE_WATER)), 1, 99)
    c:EnableReviveLimit()

    -- DEF gain on Synchro Summon
    local e1=Effect.CreateEffect(c)
    e1:SetDescription(aux.Stringid(id,0))
    e1:SetCategory(CATEGORY_DEFCHANGE+CATEGORY_REMOVE)
    e1:SetType(EFFECT_TYPE_SINGLE+EFFECT_TYPE_TRIGGER_O)
    e1:SetProperty(EFFECT_FLAG_DELAY+EFFECT_FLAG_CARD_TARGET)
    e1:SetCode(EVENT_SPSUMMON_SUCCESS)
    e1:SetCondition(s.defcon)
    e1:SetTarget(s.deftg)
    e1:SetOperation(s.defop)
    c:RegisterEffect(e1)

    -- WATER monsters: Choose ATK or DEF for damage calculation
    local e2=Effect.CreateEffect(c)
    e2:SetType(EFFECT_TYPE_FIELD)
    e2:SetCode(EFFECT_DEFENSE_ATTACK)
    e2:SetRange(LOCATION_MZONE)
    e2:SetTargetRange(LOCATION_MZONE,0)
    e2:SetTarget(s.watertg)
    c:RegisterEffect(e2)

    -- If "Umi" is on field: WATER monsters can attack in face-up DEF position
    local e3=Effect.CreateEffect(c)
    e3:SetType(EFFECT_TYPE_FIELD)
    e3:SetCode(EFFECT_DEFENSE_ATTACK)
    e3:SetRange(LOCATION_MZONE)
    e3:SetTargetRange(LOCATION_MZONE,0)
    e3:SetCondition(s.umicon)
    e3:SetTarget(s.watertg)
    e3:SetValue(1)
    c:RegisterEffect(e3)
end

-- Synchro Summon check
function s.defcon(e,tp,eg,ep,ev,re,r,rp)
    return e:GetHandler():IsSummonType(SUMMON_TYPE_SYNCHRO)
end

-- DEF gain: Target 1 WATER monster in GY, banish, gain DEF = Level x 200
function s.filter(c)
    return c:IsRace(RACE_WATER) and c:IsMonster() and c:IsAbleToRemove()
end
function s.deftg(e,tp,eg,ep,ev,re,r,rp,chk,chkc)
    if chkc then return chkc:IsControler(tp) and chkc:IsLocation(LOCATION_GRAVE) and s.filter(chkc) end
    if chk==0 then return Duel.IsExistingTarget(s.filter,tp,LOCATION_GRAVE,0,1,nil) end
    Duel.Hint(HINT_SELECTMSG,tp,HINTMSG_REMOVE)
    local g=Duel.SelectTarget(tp,s.filter,tp,LOCATION_GRAVE,0,1,1,nil)
    Duel.SetOperationInfo(0,CATEGORY_REMOVE,g,1,0,0)
end
function s.defop(e,tp,eg,ep,ev,re,r,rp)
    local c=e:GetHandler()
    local tc=Duel.GetFirstTarget()
    if tc and tc:IsRelateToEffect(e) and Duel.Remove(tc,POS_FACEUP,REASON_EFFECT)~=0 then
        local lv=tc:GetLevel()
        if lv>0 and c:IsFaceup() and c:IsRelateToEffect(e) then
            local e1=Effect.CreateEffect(c)
            e1:SetType(EFFECT_TYPE_SINGLE)
            e1:SetCode(EFFECT_UPDATE_DEFENSE)
            e1:SetValue(lv*200)
            e1:SetReset(RESET_EVENT+RESETS_STANDARD_DISABLE)
            c:RegisterEffect(e1)
        end
    end
end

-- WATER monsters use ATK or DEF for damage calculation
function s.watertg(e,c)
    return c:IsAttribute(ATTRIBUTE_WATER)
end

-- Condition: "Umi" is on the field
function s.umicon(e)
    return Duel.IsExistingMatchingCard(s.umifilter,e:GetHandlerPlayer(),LOCATION_FZONE,LOCATION_FZONE,1,nil)
end
function s.umifilter(c)
    return c:IsFaceup() and c:IsCode(22702055) -- Umi's card ID
end

